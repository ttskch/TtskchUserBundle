<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8"/>
</head>
<body>
<div>
  {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    logged in as: {{ app.user.username }}
    <a href="{{ path('ttskch_user_security_logout') }}">logout</a>
  {% else %}
    <a href="{{ path('ttskch_user_security_login') }}">login</a>
  {% endif %}
</div>

{% if app.request.hasPreviousSession %}
  {% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
      <div class="flash-{{ type }}">
        {{ message }}
      </div>
    {% endfor %}
  {% endfor %}
{% endif %}

<div>
  {% block ttskch_user_content %}
  {% endblock ttskch_user_content %}
</div>
</body>
</html>
